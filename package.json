{
	"name": "betterfilepathcopy",
    "author": {
        "name": "Fallever"
    },
    "icon": "icons/icon.jpg",
    "publisher": "Fallever",
    "repository": {
        "type":"git",
        "url": "https://github.com/Philofallever/BetterFilePathCopy"
    },
	"displayName": "BetterFilePathCopy",
	"description": "better copy file path",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onStartupFinished"
    ],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
            {
                "command": "extension.copyRelativeFilePath",
                "title": "复制相对路径(better)"
            },
            {
                "command": "extension.copyName",
                "title": "复制名称(bettler)"
            }
		],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.copyRelativeFilePath",
                    "when": "never"
                },
                {
                    "command": "extension.copyName",
                    "when": "never"
                }
            ],
            "explorer/context": [
                {
                    "command": "extension.copyRelativeFilePath",
                    "group": "6_copypath@30"
                },
                {
                    "command": "extension.copyName",
                    "group": "6_copypath@31"
                }
            ]
        },
        "keybindings":[
            {
                "command": "extension.copyRelativeFilePath",
                "when": "!editorFocus",
                "key": "shift+alt+c"
            }
        ],
        "configuration":[
            {
                "title": "betterfilepathcopy",
                "properties": {
                    "betterpath.packagepath":{
                        "type":"string",
                        "scope":"resource",
                        "description": "将忽略的路径",
                        "default":""
                    },
                    "betterpath.ignoreextension":{
                        "type":"boolean",
                        "scope": "resource",
                        "description":"忽略扩展名",
                        "default":true
                    }
                }
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.53.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
